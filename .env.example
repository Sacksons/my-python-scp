# Kazi Backend Environment Variables
# Copy this file to .env and fill in your values

# Security - REQUIRED
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=your-secret-key-here

# Token expiration (optional, defaults to 30 minutes)
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Database Configuration
# Option 1: Direct PostgreSQL connection (preferred for production)
DATABASE_URL=postgresql://user:password@localhost:5432/kazi_db

# Option 2: SSH Tunnel (for PythonAnywhere or similar)
# PA_USERNAME=your_pythonanywhere_username
# PA_PASSWORD=your_pythonanywhere_password
# PG_HOST=your-hostname.postgres.pythonanywhere-services.com
# PG_PORT=5432
# PG_USER=your_postgres_user
# PG_PASS=your_postgres_password
# PG_DB=your_database_name

# Application settings
DEBUG=false
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
